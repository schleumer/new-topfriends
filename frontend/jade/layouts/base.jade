doctype html
html(ng-app="TopFriends")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(charset="UTF-8")
    title top friends
  body
    .content
      .alert.alert-primary
        | Mudamos de cara, no momento nosso aplicativo só irá suportar o Top Chat, em breve traremos os outros de volta ;)
      nav#top-bar
        div
          h1
            img(src="/icons/48.png")
        div.infos.pull-right
          span(ng-if="user")
            img.picture(ng-src="{{'//graph.facebook.com/' + user.id + '/picture'}}")
            span(ng-bind="user.name")
          button.q-button.button-error.button-xsmall(ng-click="deleteUser()")
            i.fa.fa-trash.spaced
            | DELETE
      block content

    link(rel="stylesheet", href="/css/main.css")
    script.
      if(!window.localStorage){
        document.write("Você está usando um navegador muito antigo")
      }
    script(src="/js/app.js")
    script.
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '242235712573248',
          xfbml      : true,
          version    : 'v2.3'
        });
        if(window.__facebookInitiaded) {
          window.__facebookInitiaded();
        } else {
          window.__facebookLoaded = true;
        }
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));